    "validator",
    "validation",
    "request",
    "validate"
  ],
  "author": "Kenneth Onah",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kenzdozz/json-request-validator/issues"
  },
  "homepage": "https://github.com/kenzdozz/json-request-validator#readme",
