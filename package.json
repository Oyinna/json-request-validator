{
  "name": "json-request-validator",
  "version": "1.0.0",
  "description": "A simple validator for express json requests",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "npm run build",
    "build": "babel ./ -d dist --copy-files --ignore 'node_modules, dist' ",
